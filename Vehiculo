public class Vehiculo
{
    public static Vehiculo[][] Vehiculo;
    public static int tama√±o;
    public static int cantidad=0;
    private String placa;
    private String marca;
    private String color;
    public int valorComercial;
    
    public Vehiculo(){
    }
    public Vehiculo(String p, String m, String c){
        this(p,m,c,30000000);
    }
    public Vehiculo(String p, String m, String c, int v){
        this.cantidad++;
        this.placa =p;
        this.marca =m;
        this.color =c;
        this.valorComercial=v;
    }
    public String getPlaca(){
        return placa;
    }
    public String getMarca(){
        return marca;
    }
    public String getColor(){
        return color;
    }
    public int getValor(){
        return valorComercial;
    }
    public void setPlaca(String p){
        this.placa=p;
    }
    public void setMarca(String m){
        this.marca=m;
    }
    public void setColor(String c){
        this.color=c;
    }
    public void setValor(int c){
        this.valorComercial=c;
    }
    public String toString(){
        return " Placa: "+ this.placa + ", Marca: " + this.marca + ", Color: " + this.color + ", Valor comercial: " + this.valorComercial + "||";
    }
    public  static String toStringVehiculos(){
        String g="";
        for(int i=0; i<Vehiculo.length; i++){
            for(int j=0; j<Vehiculo[i].length; j++){
                if(Vehiculo[i][j]!= null){
                    g+= " Placa: "+ Vehiculo[i][j].placa + ", Marca: " + Vehiculo[i][j].marca + ", Color: " + Vehiculo[i][j].color + ", Valor comercial: " + Vehiculo[i][j].valorComercial + "||";     
            }
        else{continue;}
        }
    }
    return g;
   }
   public static int cantidadVehiculos(){
       return cantidad;
    }
   public static String VehiculosColor(String c){
       String text="";
       String inf2="";
       for(int i=0; i<Vehiculo.length; i++){
            for(int j=0; j<Vehiculo[i].length; j++){
                if(Vehiculo[i][j]!= null){
                    text+= " Placa: "+ Vehiculo[i][j].placa + ", Marca: " + Vehiculo[i][j].marca + ", Color: " + Vehiculo[i][j].color + ", Valor comercial: " + Vehiculo[i][j].valorComercial + "||";     
                }
            }
        }
       int index = text.indexOf(c);
       while (index != -1){
       int posc= text.indexOf(c);
       int pospla= text.indexOf("Placa");
       String inf1 = text.substring(pospla ,posc+5);
       inf2+=inf1;
      }
    return inf2;
    }
}




